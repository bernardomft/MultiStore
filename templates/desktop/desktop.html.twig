{% extends 'base.html.twig' %}

{% block title %}Hello DesktopController!
{% endblock %}

{% block body %}
	<div class="col-12 row justify-content-xs-center justify-content-lg-around mt-5">
		<div class="col-xs-11 col-lg-4 offset-xs-1 offset-lg-1 row justify-content-center">
			<img class="" src="{{ asset('images/Desktops/' ~ product.picture ) }}" alt="Card image cap" width"500px" height="500px"/>
		</div>

		<div class="col-xs-11 col-lg-6 row justify-content-xs-center justify-content-lg-start">
			<h2 class="h2 col-xs-3 offset-xs-1 col-lg-11 mt-4 text-center text-lg-left">
				{{product.name}}
			</h2>
			<h4 class="h4 col-xs-3 col-lg-11 mt-4 lead">
				Fabricante:
				{{product.mark}}
			</h4>
			<h4 class="h4 col-xs-3 col-lg-11 mt-4 lead">
				Modelo:
				{{product.model}}
			</h4>
			<h4 class="h4 col-xs-3 col-lg-11 mt-4 lead">
				Memoria RAM:
				{{desktop.ramMemory}}
				{{desktop.ramTechnology}}</h4>
			<h4 class="h4 col-xs-3 col-lg-11 mt-4 lead">
				Procesador:
				{{desktop.processorMaker}}
				{{desktop.processorModel}}</h4>
			<h4 class="h4 col-xs-3 col-lg-11 mt-4 lead">
				Tarjeta gráfica:
				{{desktop.graphicMaker}}
				{{desktop.graphicModel}}
				{{desktop.graphicCapacity}}</h4>
			<h4 class="h4 col-xs-3 col-lg-11 mt-4 lead">
				S.O.:
				{{desktop.os}}</h4>
			<h4 class="h4 col-xs-3 col-lg-11 mt-4 lead">
				Precio:
				{{product.price}}
				$</h4>
			<select id="stockSelect" class="col-xs-12  col-lg-6 mt-4 lead form-select" aria-label="Default select example">
				<option selected>1</option>
				{% for i in 2..product.stock %}
					<option value="1">{{ i }}</option>
				{% endfor %}
			</select>
			<div class="w-100"></div>
			<button href="" onClick="checkAddCart({{product.id}})"  class=" col-xs-12 col-lg-6 mt-4 lead btn btn-primary">
				Añadir al carrito
			</button>
		</div>
		<div class="col-xs-11 col-lg-6 mt-3 row">
			<h2 class="h2 col-12">
				Descripciónn</h2>
			<p class="p col-12 leaf text-align-justify">
				{{product.description}}
			</p>
			<table class="mt-4 col-12 table">
				<tbody>
					<tr>
						<th scope="row">Fabricante</th>
						<td>{{product.maker}}</td>
					</tr>
					<tr>
						<th scope="row">Nombre</th>
						<td>{{product.name}}</td>
					</tr>
					<tr>
						<th scope="row">Modelo</th>
						<td>{{product.model}}</td>
					</tr>
					<tr>
						<th scope="row">Dimensiones</th>
						<td>{{product.dimensions}}</td>
					</tr>
					<tr>
						<th scope="row">Peso</th>
						<td>{{product.weight}}</td>
					</tr>
					<tr>
						<th scope="row">Año</th>
						<td>{{product.year}}</td>
					</tr>
					<tr>
						<th scope="row">Capacidad de la memoria ram</th>
						<td>{{desktop.ramMemory}}</td>
					</tr>
					<tr>
						<th scope="row">Frequencia de la memoria ram</th>
						<td>{{desktop.ramFrequency}}</td>
					</tr>
					<tr>
						<th scope="row">Tecnnología de la memoria ram</th>
						<td>{{desktop.ramTechnology}}</td>
					</tr>
					<tr>
						<th scope="row">Disco duro</th>
						<td>{{desktop.hardDisk}}</td>
					</tr>
					<tr>
						<th scope="row">Fabricante de el procesador</th>
						<td>{{desktop.processorMaker}}</td>
					</tr>
					<tr>
						<th scope="row">Modelo de el procesador</th>
						<td>{{desktop.processorModel}}</td>
					</tr>
					<tr>
						<th scope="row">Velocidad de el procesador</th>
						<td>{{desktop.processorVelocity}}</td>
					</tr>
					<tr>
						<th scope="row">Núcleos de el procesador</th>
						<td>{{desktop.processorCore}}</td>
					</tr>
					<tr>
						<th scope="row">caché de el procesador</th>
						<td>{{desktop.processorCache}}</td>
					</tr>
					<tr>
						<th scope="row">Fabricante de la gráfica</th>
						<td>{{desktop.graphicMaker}}</td>
					</tr>
					<tr>
						<th scope="row">Modelo de la gráfica</th>
						<td>{{desktop.graphicModel}}</td>
					</tr>
					<tr>
						<th scope="row">Tecnología de la gráfica</th>
						<td>{{desktop.graphicTechnology}}</td>
					</tr>
					<tr>
						<th scope="row">Capacidad de la gráfica</th>
						<td>{{desktop.graphicCapacity}}</td>
					</tr>
					<tr>
						<th scope="row">Interfaz gráfica</th>
						<td>{{desktop.graphicInterface}}</td>
					</tr>
					<tr>
						<th scope="row">USB 2.0</th>
						<td>{{desktop.usb20}}</td>
					</tr>
					<tr>
						<th scope="row">USB 3.0</th>
						<td>{{desktop.usb30}}</td>
					</tr>
					<tr>
						<th scope="row">HDMI</th>
						<td>{{desktop.hdmi}}</td>
					</tr>
					<tr>
						<th scope="row">DVI</th>
						<td>{{desktop.dvi}}</td>
					</tr>
					<tr>
						<th scope="row">BLUETOOTH</th>
						<td>{{desktop.bluetooth}}</td>
					</tr>
					<tr>
						<th scope="row">S.O.</th>
						<td>{{desktop.os}}</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
