							<p class="card-text">Precio:
								{{ product.price}}
								$</p>
							<a href=" {{ asset('/product/getProduct/Funda/' ~ product.id ) }} " class="btn btn-primary">Ver producto</a>
						</div>
					</div>
			{% endfor %}
		</div>
{% endblock %}
