{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
    <h1 class="h1 col-12 text-center">Historial de pedidos: </h1>
    {% for order in orders %}
        <div class="col-12">
            <div> {{order.date|date('d/m/Y')}}</div>
        </div>
        <div class="col-12">
            <div> {{order.amount}} $</div>
        </div>
         <div class="col-12">
            <div> {{order.address}}</div>
        </div>
        <div class="col-12">
            <div> {{order.state}}</div>
        </div>
    {% endfor %}
    <h1 class="h1 col-12 text-center">PÃ¡gina de usuario</h1>
	<form class="col-12">
		<div class="form-group">
			<label for="username">Nombre de usuario: </label>
			<input type="text" name="username" class="form-control" id="username" aria-describedby="emailHelp" placeholder="">
		</div>
        <div class="form-group">
			<label for="email">Email: </label>
			<input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="">
		</div>
        <div class="form-group">
			<label for="name">Nombre: </label>
			<input type="text" name="name" class="form-control" id="name" aria-describedby="emailHelp" placeholder="">
		</div>
        <div class="form-group">
			<label for="surname">Apellidos: </label>
			<input type="text" name="surname" class="form-control" id="surname" aria-describedby="emailHelp" placeholder="">
		</div>
        <div class="form-group">
			<label for="birdthday">fecha de nacimiento: </label>
			<input type="date" name="birdthday" class="form-control" id="birdthday" aria-describedby="emailHelp" placeholder="">
		</div>
         <div class="form-group">
			<label for="picture">Foto: </label>
			<input type="file" name="picture" class="form-control" id="picture" aria-describedby="emailHelp" placeholder="">
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>

    


{% endblock %}
